
    <div class="container mt-5">
        <form class="form-signin" method="post" action="@Url.Action("Login", "Users")">
            <h2 class="mb-3 font-weight-normal">Inicio de sesión</h2>

            <label for="txtEmail" class="sr-only">Email:</label>
            <input type="email" id="txtEmail" name="txtEmail" class="form-control mb-2" placeholder="Email" required autofocus>

            <label for="txtPassword" class="sr-only">Contraseña:</label>
            <input type="password" id="txtPassword" name="txtPassword" class="form-control mb-3" placeholder="Contraseña" required>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>

            <p class="mt-3">¿No tienes una cuenta? <a href="@Url.Action("Registro", "Users")">Regístrate</a></p>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
